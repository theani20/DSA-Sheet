int isSorted(int n, vector<int> a)
{
  for (int i = 0; i < n; i++) 
  {
    if (a[i] >= a[i -1]) 
    {
      
    }
    else
    return 0;
  }
  return 1;
}

2nd  method

int isSorted(int n, vector<int> a) {

    int i=0;

    while(i!=n-1){

        if(a[i]<=a[i+1]){

            i++;

        }

        else{

            return 0;

            break;

        }

    }

    return 1;

}
